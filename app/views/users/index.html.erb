<%= link_to 'Create User', new_user_path, class: "btn btn-info"%>

     <table class="table">
       <thead>
         <tr>
           <th>Name</th>
           <th>Email</th>
         </tr>
       </thead>

       <tbody>
         <% @users.each do |user| %>
           <tr>
               <td><%= user.first_name %><%= user.last_name %></td>
               <td><%= user.email_address %></td>
               <td><%= link_to 'Edit', edit_user_path(user)%></td>
           </tr>
         <% end %>
       </tbody>
     </table>
