<div class="page-header">
<%= link_to 'Edit', edit_project_task_path(@project,@task), class: "btn btn-info pull-right" %>
  <h2><%= @task.description %></h2>
</div>

<ol class="breadcrumb">
  <li><a><%= link_to "Tasks", project_tasks_path %> </a></li>
  <li class= "active"> <%= @task.description %></li>
</ol>

<p>
  <strong>Date:</strong>
  <%= @task.due %>
</p>

<p>
  <strong>Complete:</strong>
  <%= @task.complete %>
</p>


<h2>Comments</h2>
  <% @comments.each do |comment| %>
<div class = "row">
  <div class = "col-md-3">
    <% if comment.user_id %>
    <%= link_to comment.user.full_name, user_path(comment.user)%>
    <% else %>
    (deleted user)
    <%end%>
    <div class = "text-muted">
      <%="#{time_ago_in_words(comment.created_at)} ago"%>
    </div>
  </div>
  <div class = "col-md-9">
    <%= comment.comment %>
  </div>
</div>
<br>
<% end %>

<%= form_for [@comment], url: new_task_comments_path(@project,@task) do |f| %>
  <%= f.text_area :comment, :class => 'form-control' %>
  <%= f.submit class: "taskshowsubmit btn btn-primary" %>
<% end %>
