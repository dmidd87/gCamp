<p id="notice"><%= notice %></p>
<p>
  <strong>Description:</strong>
  <%= @task.description %>
</p>
<p>
  <strong>Date:</strong>
  <%= @task.due %>
</p>
<p>
  <strong>Complete:</strong>
  <%= @task.complete %>
</p>
<%= link_to 'Edit', edit_project_task_path(@project,@task) %> |
<%= link_to 'Back', project_tasks_path(@project) %>

<h2>Comments</h2>
  <% @comments.each do |comment| %>
    <div class="row">
      <div class="col-sm-2">
        <% if comment.user_id %>
          <%= link_to comment.user.full_name, user_path(comment.user.id) %>
        <% end %>
        <div class="col-sm-6">
          <%= comment.comment %>
        </div>
      </div>
    </div>
  <% end %>

<%= form_for [@comment], url: new_task_comments_path(@project,@task) do |f| %>
  <%= f.text_area :comment, :class => 'form-control' %>
  <%= f.submit class: "btn btn-primary" %>
<% end %>
