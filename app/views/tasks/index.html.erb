<h1 class="page-header">Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td width="100%"><%= task.description %></td>

          <td><%= link_to 'Show', task, class: "btn btn-success pull-right" %></td>
          <td><%= link_to 'Edit', edit_task_path(task), class: "btn btn-primary pull-right" %></td>
          <td><%= link_to 'Destroy', task, class: "btn btn-danger pull-right", method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Create Task', new_task_path, class: "btn btn-info"%>
