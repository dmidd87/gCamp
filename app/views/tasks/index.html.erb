<div class="container">
  <h1 class="page-header">Tasks</h1>
  <table class="table">
    <thead>
      <tr>
        <th>Description</th>
        <th>Due Date</th>
        <th>Completed</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @tasks.each do |task| %>
        <tr>
            <td><%= task.description %></td>
            <td><%= task.due %></td>
            <td><%= task.complete %></td>
            <td class="form-actions">
              <%= link_to 'Show', task, class: "btn btn-success" %>
              <%= link_to 'Edit', edit_task_path(task), class: "btn btn-primary" %>
              <%= link_to 'Destroy', task, class: "btn btn-danger", method: :delete %>
            </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to 'Create Task', new_task_path, class: "btn btn-info"%>
</div>
