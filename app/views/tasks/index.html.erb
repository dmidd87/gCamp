<h1 class="page-header">Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.description %></td>
          <td class="btn btn-danger pull-right"><%= link_to 'Destroy', task, method: :delete %></td>
          <td class="btn btn-primary pull-right"><%= link_to 'Edit', edit_task_path(task) %></td>
          <td class="btn btn-success pull-right"><%= link_to 'Show', task %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Create Task', new_task_path, class: "btn btn-info"%>
