<div class="container">
    <div class="col-md-offset-4 col-md-4">
      <div class="well">
  <h2>Register for gCamp!</h2>


  <div>
<% if @user.errors.any? %>
  <div id="error_explanation">
    <ul class="list-unstyled">
    <% @user.errors.full_messages.each do |msg| %>
      <div style="color:red"><li><%= msg %></li><div>
    <% end %>
    </ul>
  </div>
<% end %>

  <%= form_for @user, url: signup_path do |f| %>

    <div class="First Name">
      <%= f.label :first_name %>
      <%= f.text_field :first_name, class:"form-control, col-sm-12" %>
    </div>

    <div class="Last Name">
      <%= f.label :last_name %>
      <%= f.text_field :last_name, class:"form-control, col-sm-12" %>
    </div>

    <div class="Email">
      <%= f.label :email_address %>
      <%= f.email_field :email_address, class:"form-control, col-sm-12" %>
    </div>

    <div class="Password">
      <%= f.label :password %>
      <%= f.password_field :password, class:"form-control, col-sm-12" %>

    <div class="Password Confirmation">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, class:"form-control, col-sm-12" %>
    </div>

    <hr>

        <%= submit_tag "Register", :class => 'btn btn-primary'%>

  <% end %>
      </div>
    </div>
</div>
