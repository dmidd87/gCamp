<%= form_for @project do |f| %>

<div class= "form-horizontal">
  <div class= "form-group">
    <div class= "col-sm-offset-1 col-sm-6">
<%= render 'shared/shared_errors', model: @project %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :name, "Name", class: "col-sm-1" %>
      <div class="col-sm-5">
        <%= f.text_field :name, class: "form-control" %>
      </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-1 col-sm-11"> <br>
      <%= f.submit button_name:"Create Project", class: "btn btn-primary" %>
    </div>
  </div>
  <% end %>
</div>
