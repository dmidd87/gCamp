<div class="container">
    <div class="col-md-offset-4 col-md-4">
      <div class="well">

    <h2>Log in to gCamp</h2>

  <div class="text-danger">
      <%= form_tag signin_path do |f| %>

        <% if @sign_in_error %>
    <font size= "3">
      <%= @sign_in_error %>
    </font>
        <% end %>
  </div>

    <div>
        <%= label_tag :email_address, "Email"%>
      <%= email_field_tag :email_address, "", class:"form-control, col-sm-12" %>
    </div>


      <%= label_tag :password, "Password"%>
      <%= password_field_tag :password, "",  class:"form-control, col-sm-12" %>

    <hr>

    <div>
      <%= submit_tag "Enter", :class => 'btn btn-primary'%>
    </div>

  <% end %>

</div>
  </div>
      </div>
